{
  "name": "@lumindigital/juno",
  "description": "CLI that allows you to generate argoworkflows from javascript/typescript",
  "version": "0.10.2",
  "author": "Aaron Mell",
  "bin": {
    "juno": "bin/run.js"
  },
  "bugs": "https://github.com/lumindigital/juno/issues",
  "dependencies": {
    "@oclif/core": "4",
    "@oclif/plugin-help": "6",
    "@oclif/plugin-plugins": "5",
    "winston": "3",
    "yaml": "2"
  },
  "devDependencies": {
    "@commitlint/cli": "20",
    "@eslint/eslintrc": "3",
    "@eslint/js": "9",
    "@oclif/prettier-config": "0",
    "@oclif/test": "4",
    "@types/chai": "5",
    "@types/mocha": "10",
    "@types/node": "24",
    "c8": "10.1.3",
    "chai": "6",
    "eslint": "9",
    "eslint-config-oclif": "6",
    "eslint-config-oclif-typescript": "3",
    "eslint-config-prettier": "10",
    "mocha": "11",
    "oclif": "4",
    "prettier": "3",
    "semantic-release": "25.0.2",
    "shx": "0.4.0",
    "swagger-typescript-api": "13",
    "ts-node": "10",
    "typescript": "5",
    "typescript-eslint": "8"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/lumindigital/juno",
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "oclif": {
    "bin": "juno",
    "dirname": "juno",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ]
  },
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "tag": "latest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lumindigital/juno"
  },
  "scripts": {
    "prebuild": "npm run lint && npm run pretty",
    "build": "tsc -b",
    "lint": "npx eslint . --fix",
    "postpack": "shx rm -f oclif.manifest.json",
    "prepack": "oclif manifest && oclif readme",
    "pretest": "npm run build",
    "test": "c8 --reporter=lcov --report-dir ./test-output/coverage mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md",
    "interfaces": "swagger-typescript-api -p ../argo-workflows/api/openapi-spec/swagger.json -o ./src/workflow-interfaces --modular --sort-types --clean-output --no-client --patch",
    "pretty": "prettier --write \"./**/*.{js,jsx,mjs,cjs,ts,tsx}\"",
    "precommit": "pre-commit run --all-files"
  },
  "types": "dist/index.d.ts"
}
